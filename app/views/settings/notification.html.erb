<div class="w-full lg:flex lg:gap-x-16 lg:px-8 lg:mt-4">
  <%= render 'sidebar' %>

  <div class="px-4 py-16 py-20 lg:py-0 sm:px-6 lg:flex-auto lg:px-0">
    <div class="mx-auto max-w-2xl space-y-16 sm:space-y-20 lg:mx-0 lg:max-w-none">
      <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900"><%= t '.reminder.title' %></h2>
        <p class="mt-1 text-sm leading-6 text-gray-500"><%= t '.reminder.description' %></p>

        <%= form_with model: @notification_setting, class: 'md:col-span-2 mt-6 space-y-6 border-t border-gray-200 text-sm leading-6' do |f| %>
          <div class="grid grid-cols-6 gap-x-6 gap-y-8 sm:max-w-xl">
            <div class="mt-4 col-span-full">
              <span class="text-sm leading-6 text-gray-900"><%= t '.reminder.days' %></span>
              <div class="flex flex-wrap gap-2 mt-2">
                <%= f.collection_check_boxes :schedule_days, setting_days_options, :last, :first, { checked: @notification_setting.schedule.days } do |b| %>
                  <div class="w-14">
                    <%= b.check_box class: 'sr-only peer' %>
                    <%= b.label class: 'cursor-pointer focus:outline-none ring-1 ring-inset ring-gray-300 bg-white text-gray-900 hover:bg-gray-50 flex items-center justify-center rounded-md py-3 px-2 text-sm font-semibold uppercase sm:flex-1 peer-checked:bg-indigo-500 peer-checked:text-white peer-checked:hover:bg-indigo-500' %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="flex flex-col justify-center col-span-4 sm:col-span-2">
              <%= f.label :schedule_time, t('.reminder.time') %>
              <%= f.time_field :schedule_time, class: 'mt-2 text-gray-900 rounded-md border-0 ring-1 ring-inset ring-gray-300' %>
            </div>

            <div class="col-span-full flex items-center">
              <label class="relative inline-flex items-center h-max cursor-pointer">
                <%= f.check_box :email, class: 'sr-only peer' %>
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-indigo-500 dark:peer-focus:ring-indigo-500 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-500"></div>
              </label>
              <%= f.label :email, t('.reminder.email_notification'), class: 'w-max ml-2 text-sm font-base text-gray-900 dark:text-gray-300' %>
            </div>
          </div>

          <div class="mt-10 flex">
            <%= f.submit t('.save'), class: 'rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500 cursor-pointer' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
