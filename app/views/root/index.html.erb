<div class="w-full mt-16">
  <div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          <%= t '.title_html' %>
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 break-keep"><%= t '.description' %></p>
      </div>
    </div>
  </div>

  <ul role="list" class="grid grid-cols-1 gap-6 xl:grid-cols-2 mt-5 lg:mt-10">
    <% @links.each do |link| %>
      <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white shadow">
        <%= link_to link.url, target: '_blank', class: 'flex flex-1 flex-col items-center p-8' do %>
          <span class="w-64 h-32">
            <%= image_tag link.image_url, class: 'mx-auto w-64 h-32 flex-shrink-0 rounded-md object-contain' %>
          </span>
          <h3 class="mt-6 text-center text-sm font-medium text-gray-900">
            <%= link.title %>
          </h3>
          <div class="text-left text-sm text-gray-500 max-md:line-clamp-5">
            <%= link.summary %>
          </div>
        <% end %>

        <div>

        </div>
      </li>
    <% end %>
  </ul>
</div>
