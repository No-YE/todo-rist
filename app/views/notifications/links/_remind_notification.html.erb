<li class="px-4 py-5">
  <h1 class="font-semibold text-base">
    <%= remind_notification.title %>
  </h1>
  <ul class="text-sm mt-2">
    <% remind_notification.links.each do |link| %>
      <li class="leading-6">
        <%= link_to link.title, link.url, class: 'text-indigo-600 hover:text-indigo-500' %>
        <span>
          (<%= link_until_due_date(link.due_date) %>)
        </span>
      </li>
    <% end %>
  </ul>
  <div class="mt-2">
    <p class="text-sm text-gray-500">
      <%= relative_time(remind_notification.record.created_at) %>
    </p>
  </div>
</li>
